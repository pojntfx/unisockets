{
  "name": "@pojntfx/unisockets",
  "version": "0.0.1-alpha1",
  "description": "A universal Berkeley sockets implementation for both WebAssembly (based on WebRTC) and native platforms with bindings for C, Go and TinyGo.",
  "main": "out/index.js",
  "scripts": {
    "build": "esbuild cmd/unisockets_runner/main.ts --bundle --minify --outfile=out/main.js --platform=node --target=node12 --external:wasi --external:wrtc",
    "build:lib": "esbuild index.ts --bundle --minify --sourcemap --outfile=out/index.js --platform=node --target=node12 --external:wrtc",
    "dev:signaling-server": "LOG_LEVEL=debug DEBUG='' ts-node-dev --experimental-wasi-unstable-preview1 --experimental-wasm-bigint --files cmd/unisockets_runner/main.ts --runSignalingServer true",
    "dev:example-server": "LOG_LEVEL=debug DEBUG='' ts-node-dev --experimental-wasi-unstable-preview1 --experimental-wasm-bigint --files cmd/unisockets_runner/main.ts --runBinary true --useC true --useWASI true cmd/c_echo_server/out/echo_server.wasm",
    "dev:example-client": "LOG_LEVEL=debug DEBUG='' ts-node-dev --experimental-wasi-unstable-preview1 --experimental-wasm-bigint --files cmd/unisockets_runner/main.ts --runBinary true --useC true --useWASI true cmd/c_echo_client/out/echo_client.wasm",
    "dev:diagram": "tplant -p tsconfig.json -i './**/*.ts*' --output 'diagram.svg'",
    "start:signaling-server": "./out/main.js --runSignalingServer true",
    "start:example-server": "./out/main.js --runBinary true --useC true --useWASI true --binaryPath cmd/c_echo_server/out/echo_server.wasm",
    "start:example-client": "./out/main.js --runBinary true --useC true --useWASI true --binaryPath cmd/c_echo_client/out/echo_client.wasm"
  },
  "bin": {
    "unisockets_runner": "out/main.js"
  },
  "files": [
    "out/main.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pojntfx/unisockets.git"
  },
  "author": "Felicitas Pojtinger <felicitas@pojtinger.com>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/pojntfx/unisockets/issues"
  },
  "homepage": "https://github.com/pojntfx/unisockets#readme",
  "devDependencies": {
    "@types/uuid": "^8.3.0",
    "@types/ws": "^7.4.0",
    "@types/yargs": "^15.0.9",
    "esbuild": "^0.8.17",
    "tplant": "^2.3.6",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "asyncify-wasm": "^1.1.1",
    "uuid": "^8.3.1",
    "winston": "^3.3.3",
    "wrtc": "^0.4.6",
    "ws": "^7.4.0",
    "yargs": "^16.1.0"
  }
}
